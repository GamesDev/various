<?xml version="1.0" encoding="UTF-8"&nbsp;?>
<Module>
  <ModulePrefs>
    <Require feature="swfobject" />
  </ModulePrefs>
  <Content type="html" view="canvas">
    <![CDATA[
      <script type="text/javascript">
        function displayFlash() {
          var params = {
            allowScriptAccess: 'always',
            wmode: 'opaque'
          };
          var swfUrl = 'http://www.biology.ualberta.ca/facilities/multimedia/uploads/alberta/Ecosystem.swf';
          swfobject.embedSWF(swfUrl, 'flash-container', 760, 500, '10', false, false, params);
        }

        gadgets.util.registerOnLoadHandler(displayFlash);
      </script>
      <div id="flash-container"><p>you need flash to see this application</p></div>
    ]]>
  </Content>
</Module>
